<%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Here are our registered homes:
      </h2>
      <ul class="grid grid-cols-1 gap-6">
  <% registeredHomes.forEach(home => { %>
    <li class="bg-white border border-gray-200 rounded-xl shadow-md hover:shadow-lg transition duration-300">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-6 p-6">
        
        <!-- Photo -->
        <div class="w-full md:w-48 h-36 bg-gray-100 rounded-lg overflow-hidden">
          <img src="<%= home.photourl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
        </div>

        <!-- Details -->
        <div class="flex-grow">
          <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
          <p class="text-gray-600 mb-1"><span class="font-semibold">Price:</span> $<%= home.price %></p>
          <p class="text-gray-600 mb-1"><span class="font-semibold">Location:</span> <%= home.location %></p>
          <p class="text-yellow-500 mb-2"><span class="font-semibold text-gray-700">Rating:</span> ‚≠ê <%= home.rating %>/5</p>

          <!-- Optional Button -->
          <a href="/homes/<%= home.id %>" class="inline-block mt-3 px-4 py-2 text-sm font-medium text-white bg-red-500 rounded hover:bg-red-600 transition">
            View Details
          </a>
        </div>

      </div>
    </li>
  <% }) %>
</ul>
    </main>
  </body>
</html>
